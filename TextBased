import java.util.Scanner;
import java.util.Random;

public class Skeleton {
	private static String playerName;
	private static int playerHealth = 10;
	private static int playerChoice;
	private static int attack = 40;
	private static int dodge;
	static Random rand = new Random();
	private static int skeletonLevel = rand.nextInt(4) + 1;
	private static int skeletonHealth = skeletonLevel * 10;
	private static int skeletonAttack = skeletonLevel * 2;
	

	public static void main(String[] args) {
		Scanner playerInput = new Scanner(System.in);
		//opening dialogue
		System.out.println("First adventurer! What is your name?");
 playerName = playerInput.next();
 System.out.println("Greetings "+playerName+"! \nQuick to the fight! Fast a skeleton approaches behind you!");
 System.out.println("What do you do? \n1)Throw a stick? \n2)Cry a little");
 playerChoice = playerInput.nextInt();
 switch(playerChoice) {
 case 1:
	 System.out.println("The stick smacks the skeleton in the face. He looks puzzled! \nHe charges at you full speed! \nYou lose " + skeletonAttack +"HP");
	 damageEnemy(attack);
	 damage(skeletonAttack);
	 System.out.println("Your health is currently " + playerHealth);
	 if(skeletonHealth > 0 ) {
		 System.out.println("The skeleton's health is currently " + skeletonHealth);
	 }
 break;
 case 2:
	 System.out.println("The skeleton sympathizes with your tears and gives you a sword");
	 break;
 default:
	 break;
 
 }
	}
	public static void damage(int damage) {
		playerHealth -= damage;
		
		if (playerHealth <= 0) {
			System.out.println("game over");
			System.exit(0);
		}
		
	}
		 public static void damageEnemy(int damageEnemy) {
		skeletonHealth -= damageEnemy;
		if (skeletonHealth <= 0) {
			System.out.println("You have defeated the creature, congrats!");
		
	}
		 
	}
	

}
